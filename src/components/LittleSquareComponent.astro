---

export interface Props {
    color: string;
    link: string;
    imagen:string;
    alt:string;
    title:string;
    contenido:string;
}


const {
    color,
    link,
    imagen,
    alt,
    title,
    contenido,
} = Astro.props;


---


<a href=`${link}` class=`justify-center gap-[1rem] relative shadow-2xl ` style=`background-color: ${color};  overflow:hidden;`>
    <img src=`${imagen}` alt=`${alt}` class=`transition-all duration-300 ` style="width: 100%; height: 100%; object-fit: cover;">
    <div style="position: absolute; top: 50%; left: 50%;transform: translate(-50%, -50%);display:flex;flex-direction:column;">
        <h1 style="font-family: bold;font-size: 30px;text-align: center; color:white">
            {title}
        </h1>
        <p style="text-align: center;color:white">
            {contenido}  
        </p>
    </div>
   
</a>

<style>
   
    a:hover img{
        transform: scale(1.1);
    }
</style>