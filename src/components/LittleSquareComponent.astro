---

export interface Props {
    color: string;
    link: string;
    imagen:string;
    alt:string;
    title:string;
    contenido:string;
    r_tr:string;
    r_tl:string;
    r_br:string;
    r_bl:string;
}
const {
    color,
    link,
    imagen,
    alt,
    title,
    contenido,
    r_tr,
    r_tl,
    r_br,
    r_bl,
} = Astro.props;


---


<a href=`${link}` class=`justify-center gap-[1rem] relative shadow-2xl overflow-hidden` style=`background-color: ${color}; border-top-right-radius:${r_tr};border-top-left-radius:${r_tl};border-bottom-right-radius:${r_br};border-bottom-left-radius:${r_bl};`>
    <img src=`${imagen}` alt=`${alt}` class=`transition-all duration-300 ` style="width: 100%; height: 100%; object-fit: cover;">
    <div style="position: absolute; top: 50%; left: 50%;transform: translate(-50%, -50%);display:flex;flex-direction:column;">
        <h1 style="font-family: bold;font-size: 30px;text-align: center; color:white">
            {title}
        </h1>
        <p style="text-align: center;color:white">
            {contenido}  
        </p>
    </div>
   
</a>

<style>
    a:hover img{
        transform: scale(1.1);
    }
</style>