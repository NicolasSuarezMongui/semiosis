    </div>
    <div id="segunda_mitad" class="grid grid-rows-2 grid-cols-2 gap-[10px] w-2/4 h-full ">
        <LittleSquareComponent  
            color="#77B3D4"
            link="#"
            imagen={localServices.src}
            alt='hola'
            title="Fabrica de innovacion"
            contenido="En la fabrica de innovacion se realizan productos innovadores en 90 dias ya no se que mas parla echar "
